<div align="center">
{{#if date}}
<h2>Anomaly Report for {{date}}</h2>
{{else}}
<h2>Latest Anomaly Report</h2>
{{/if}}
</div>
<div align=right>
<select name="monthlyReport" onchange="location = this.options[this.selectedIndex].value;">
		<option value="#">See other reports here</option>
	{{#each month}}
		<option value="chart?bldg_id={{../bldg._id}}&date={{this._id}}" >{{this._id}} ({{this.nbAnomaly}} anomalies)</option>
	{{/each}}
</select>
</div>

<div class="row-fluid sortable">
	{{#each indexes}}
	<div class="box">
	<div class="box-header">
		<h2><i class="icon-list-alt box-icon"></i><span class="break"></span>
			<div class="box-icon">
				<!-- <a href="#" class="btn-setting"><i class="icon-wrench"></i></a> -->
				<a href="#" class="btn-minimize" id="btn-minimize-{{this}}"><i class="icon-chevron-up"></i></a>
				<!-- <a href="#" class="btn-close"><i class="icon-remove"></i></a> -->
			</div>
        <span id="anomaly-title{{this}}"></span>
        <span class="anomaly-useful-header">Is this anomaly useful?</span>
        <span class="anomaly-useful btn-group" data-toggle="buttons-radio">
          <a href="#" class="btn btn-primary" data-toggle="button">Yes</a>
          <a href="#" class="btn btn-primary" data-toggle="button">No</a>
          <a href="#" class="btn btn-primary" data-toggle="button">Unsure</a>
        </span>
		</h2>
	</div>
	<div class="box-content" id="anomaly{{this}}">
		{{! closing the HTML, end of box }}
	</div>
	</div>
	{{/each}}
	<div id="alarmsdata" data-alarms='{{{data}}}'></div>
</div><!--/row-->

<!-- end: Content -->
