<!-- start: Content -->
<div class="row-fluid sortable">		
	<div class="box span9">
		<div class="box-header" data-original-title>
			<h2><i class="icon-sitemap"></i><span class="break"></span>Streams</h2>
			<div class="box-icon">
				<!-- <a href="#" class="btn-setting"><i class="icon-wrench"></i></a> -->
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<!-- <a href="#" class="btn-close"><i class="icon-remove"></i></a> -->
			</div>
		</div>
		<div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
				<thead>
					<tr style="cursor: pointer">
						<th class="sorting">Name<i class="icon-sort"></i></th>
						<th class="sorting priority">Priority<i class="icon-sort"></i></th>
						<th class="sorting">Lower Bound<i class="icon-sort"></i></th>
						<th class="sorting">Upper Bound<i class="icon-sort"></i></th>
					</tr>
				</thead>   
				<tbody>
				<!-- This is the table where we put the stream entries -->
				{{#each streams}}
				<tr class="stream">
					<td>{{this.name}}</td>
					<td class="center"><span class="priority" id="{{this.id}}"><i class="btn icon-minus" id="btnmin"></i> <span class="priority{{this.priority}}"></span> <i class="btn icon-plus" id="btnplu"></i></span></td>
						<td class="center"><input class="lower_bound" type="number"  value="{{this.lower_bound}}"></td>
						<td class="center"><input class="upper_bound" type="number"  value="{{this.upper_bound}}"></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
		
	</div>
	
	</div><!-- end box --> 
	
	
<hr>

<!-- end: Content -->
